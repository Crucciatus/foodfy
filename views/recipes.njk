{% extends 'layout.njk' %}

{% block content %}
  <div class="list-recipes" id="recipes-list-recipes">

    {% for recipe in recipes %}
      <div class="recipe">
        <img src="{{ recipe.imageHome }}" class="recipe-image" >
        <h3>{{ recipe.title }}</h3>
        <p>{{ recipe.author }}</p>
      </div>
    {% endfor %}

  </div>
  
  


    <div class="modal-overlay">
      <div class="modal">
        <div class="modal-img">
          <img src="" alt=""/>
        </div>
        
        <div class="modal-description">
          <h3>Asinhas de frango ao barbecue</h3>
          <p>por Vania Steroski</p>
          <a class="close-modal">
            Fechar modal
          </a>
        </div>
        
      </div>
    </div>

    <script src="scripts.js"></script>
{% endblock %}