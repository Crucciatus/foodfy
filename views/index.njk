{% extends 'layout.njk' %}

    {% block content %}
      <div class="apresentation">
        <div class="text-describe">
          <h1>As melhores receitas</h1>
          <p>Aprenda a construir os melhores pratos
            com receitas criadas por profissionais
            do mundo inteiro.
          </p>
        </div>

        <img src="/chef.png" alt="chef image">
      </div>
      
      <h2 class="list-title">
        Mais acessadas
      </h2>

      <div class="list-recipes">
      {% for recipe in recipes %}
        <div class="recipe">
          <img src="{{ recipe.imageHome }}" class="recipe-image" >
          <h3>{{ recipe.title }}</h3>
          <p>{{ recipe.author }}</p>
        </div>
      {% endfor %}
      </div>
      
      
    </section>

    <div class="modal-overlay">
      <div class="modal">
        <div class="modal-img">
          <img src="" alt=""/>
        </div>
        
        <div class="modal-description">
          <h3>Asinhas de frango ao barbecue</h3>
          <p>por Vania Steroski</p>
          <a class="close-modal">
            Fechar modal
          </a>
        </div>
        
      </div>
    </div>

    <script src="scripts.js"></script>
  {% endblock %}
