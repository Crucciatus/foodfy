{% extends 'layout.njk' %}

    {% block content %}
      <div class="apresentation">
        <div class="text-describe">
          <h1>As melhores receitas</h1>
          <p>Aprenda a construir os melhores pratos
            com receitas criadas por profissionais
            do mundo inteiro.
          </p>
        </div>

        <img src="/chef.png" alt="chef image">
      </div>
      
      <h2 class="list-title">
        Mais acessadas
      </h2>

      <div class="list-recipes">
      {% for recipe in recipes %}
        <div class="recipe" id="{{ recipes.indexOf(recipe) }}">
          <img src="{{ recipe.imageHome }}" class="recipe-image" >
          <h3>{{ recipe.title }}</h3>
          <p>{{ recipe.author }}</p>
        </div>
      {% endfor %}
      </div>

    <script src="scripts.js"></script>
  {% endblock %}
